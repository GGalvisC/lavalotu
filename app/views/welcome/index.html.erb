<div class="wrapper">
	<div class="wrapper-head">
		<%= image_tag("background-header.jpg", :alt => "Background LavaloTu", :title => "Background LavaloTu", :class=> "img-responsive") %>
		<div class="info">
			<div class="logo">
				<%= image_tag("logo.png", :alt => "Logo LavaloTu", :title => "Logo LavaloTu", :class=> "img-responsive") %>
			</div>
			<h1 class="slogan">LavaloTu lava por tí</h1>
		</div>
		<ul class="session">
			<li>
				<%= link_to "Regístrate", root_path %>
			</li>
			<li>
				<%= link_to "Iniciar Sesión", root_path %>
			</li>
		</ul>
	</div>
	<div class="wrapper-body container">
		<div class="steps row">
			<h2 class="title">SOLO EN TRES SIMPLES PASOS</h2>
			<div class="step col-md-4">
				<span>Ordena</span>
				<%= image_tag("ordena.jpg", :alt => "Logo LavaloTu", :title => "Logo LavaloTu", :class=> "img-responsive") %>
			</div>
			<div class="step middle col-md-4">
				<span>Entrega</span>
				<%= image_tag("entrega.jpg", :alt => "Logo LavaloTu", :title => "Logo LavaloTu", :class=> "img-responsive") %>
			</div>
			<div class="step col-md-4">
				<span>Recibe</span>
				<%= image_tag("recibe.jpg", :alt => "Logo LavaloTu", :title => "Logo LavaloTu", :class=> "img-responsive") %>
			</div>
		</div>
	</div>
</div>
<footer>
	<div class="container">
		<div class="about_us col-md-6">
			<ul class="options">
				<li class="option"><%= link_to "Preguntas frecuentes", root_path %></li>
				<li class="option"><%= link_to "Términos y condiciones", root_path %></li>
				<li class="option"><%= link_to "Precios", root_path %></li>
				<li class="option"><%= link_to "Calcular orden", root_path %></li>
				<li class="option"><%= link_to "Política de privacidad", root_path %></li>
				<li class="option"><%= link_to "Quejas y reclamos", root_path %></li>
			</ul>
		</div>
		<div class="services col-md-6">
			<h4 class="subtitle">Nuestros Servicios</h4>
			<ul class="options">
				<li class="option">Lavado</li>
				<li class="option">Tinturado</li>
				<li class="option">Donaciones</li>
			</ul>
		</div>
	</div>
</footer>	
